{
  "name": "phico/twig",
  "description": "Twig template rendering support for Phico",
  "type": "library",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Phico\\View\\Twig\\": "src/"
    }
  },
  "authors": [
    {
      "name": "indgy",
      "email": "me@indgy.uk"
    }
  ],
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "/home/dev/phico-php/phico"
    }
  ],
  "require": {
    "php": "^8.0",
    "twig/twig": "^3.10",
    "phico/phico": "dev-main"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "pestphp/pest": "^2.34"
  }
}
